{
  "id": null,
  "uid": "traefik-dashboard",
  "title": "API Gateway Monitoring",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Requests",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(traefik_service_requests_total)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "HTTP 5xx Errors",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(traefik_service_requests_total{code=~\"5..\"})",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Request Latency",
      "gridPos": { "x": 0, "y": 6, "w": 16, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(traefik_service_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "C"
        }
      ]
    }
  ]
}
